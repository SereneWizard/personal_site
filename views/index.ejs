<%- include("partials/header") -%>

<div class="header">
    <div id="landingpage-header" class="container-fluid">
        <h1>sharing is learning</h1>
    </div>
</div>


    <%- include("partials/navbar") -%>

    <div  class="container-fluid bg-dark text-white">
        <div id="dds" class="row align-items-center">
            <div class="col-md-6">
            <img id="homeimage" src="images/home.png" alt="homepage-figure">
            </div>
            <div id="dds" class="col-md-6"  align="center">
                <div class="container">
                <h1 style="font-weight: bolder; font-size:60px;"> discovering datascience... </h1>
                </div>
            </div>
        </div>
    </div>

    <div id="blogbox" class="container-fluid">
        <div class="row"> 
            <div class="col-lg-3" >
            </div>
            <div class="col-xl-6 col-md-12" >
                <% posts.forEach(function(post) { %>
                    <div class="container-fluid border blogpreview">
                        <div class="row">
                            <div class="col col-lg-6">
                                <h2><%= post.blogTitle %></h2>
                                <hr>
                            </div>
                            <div class="col col-lg-6" style="text-align: right;">
                                <p>
                                    <%= month[post.publishedDate.getMonth() + 1] %> 
                                    <%= post.publishedDate.getDate() %>, 
                                    <%= post.publishedDate.getFullYear() %>
                                </p>
                            </div>
                        </div>
                        <p>
                            <%= post.blogContent.substring(0, 200) + "..." %>
                            <a href="/posts/<%=post.blogTitle%>">Read more</a>
                        </p>
                    </div>
                <% }) %>
            </div>
            <div class="col col-lg-3">
            </div>
        </div>
    </div>

    <%- include("partials/about") -%>
    <%- include("partials/contact") -%>

    <%- include("partials/footer") -%>

   